<Window x:Class="SmurfAccountManager.Views.EditAccountsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SmurfAccountManager.Converters"
        Title="Smurf Account Manager for LoL" 
        Height="500" 
        Width="600"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#2C2C2C"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <converters:AccountTagToIconConverter x:Key="TagToIconConverter"/>
        <converters:AccountTagToShapeConverter x:Key="TagToShapeConverter"/>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SmallButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="#1C1C1C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Smurf Account Manager for LoL" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontSize="12"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button Content="□" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                <Button Content="✕" Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Action Buttons -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0" 
                    Content="back" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="BackButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="2" 
                    Content="export accounts" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="ExportButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="3" 
                    Content="import accounts" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="ImportButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="4" 
                    Content="paths requirement" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="PathsButton_Click"
                    Margin="0,0,10,0"/>
            
            <Button Grid.Column="5" 
                    Content="new account" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="NewAccountButton_Click"/>
        </Grid>

        <!-- Accounts List -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="10,0,10,10">
            <ItemsControl x:Name="AccountsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border x:Name="AccountBorder"
                                Background="#3C3C3C" 
                                BorderBrush="#555555" 
                                BorderThickness="1"
                                CornerRadius="5"
                                Margin="0,0,0,10"
                                Padding="10"
                                AllowDrop="True"
                                PreviewMouseLeftButtonDown="AccountItem_PreviewMouseLeftButtonDown"
                                PreviewMouseMove="AccountItem_PreviewMouseMove"
                                Drop="AccountItem_Drop"
                                DragOver="AccountItem_DragOver">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Drag Handle -->
                                <TextBlock Grid.Column="0" 
                                           Text="☰" 
                                           Foreground="#888888"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,10,0"
                                           Cursor="Hand"/>
                                
                                <!-- Tag Icon -->
                                <ContentControl Grid.Column="1"
                                               Content="{Binding Tag, Converter={StaticResource TagToShapeConverter}}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"
                                               Width="20"
                                               Height="20"/>
                                
                                <!-- Username -->
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding Username}" 
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           FontSize="14"/>
                                
                                <!-- Edit Button -->
                                <Button Grid.Column="3" 
                                        Content="edit" 
                                        Style="{StaticResource SmallButtonStyle}"
                                        Tag="{Binding}"
                                        Click="EditAccountButton_Click"
                                        Margin="0,0,5,0"/>
                                
                                <!-- Tag Button -->
                                <Button Grid.Column="4" 
                                        Content="tag" 
                                        Style="{StaticResource SmallButtonStyle}"
                                        Tag="{Binding}"
                                        Click="TagButton_Click"
                                        Margin="0,0,5,0"/>
                                
                                <!-- Delete Button -->
                                <Button Grid.Column="5" 
                                        Content="delete" 
                                        Style="{StaticResource SmallButtonStyle}"
                                        Tag="{Binding}"
                                        Click="DeleteButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
