<Window x:Class="SmurfAccountManager.Views.ExportDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Export Accounts" 
        Height="300" 
        Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#2C2C2C"
        WindowStartupLocation="CenterOwner">
    
    <Window.Resources>
        <Style x:Key="StandardButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C4C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1C1C1C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#555555" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" 
                       Text="Your Export Password" 
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBox Grid.Row="1" 
                     x:Name="PasswordTextBox"
                     Style="{StaticResource TextBoxStyle}"
                     Margin="0,0,0,10"/>

            <Button Grid.Row="2" 
                    Content="Copy to Clipboard" 
                    Style="{StaticResource StandardButtonStyle}"
                    Click="CopyButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,15"/>

            <Border Grid.Row="3"
                    Background="#4C3C3C"
                    BorderBrush="#CC5555"
                    BorderThickness="1"
                    CornerRadius="5"
                    Padding="15"
                    Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="⚠️ IMPORTANT" 
                               Foreground="#FFAA88"
                               FontSize="13"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Save this password! You'll need it to import your accounts later." 
                               Foreground="#FFCCBB"
                               FontSize="12"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Row="5" 
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Export" 
                        Style="{StaticResource StandardButtonStyle}"
                        Click="ExportButton_Click"/>
                <Button Content="Cancel" 
                        Style="{StaticResource StandardButtonStyle}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
