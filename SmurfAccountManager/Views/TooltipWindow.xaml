<Window x:Class="SmurfAccountManager.Views.TooltipWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">
    
    <Border Background="#3C3C3C" 
            BorderBrush="#555555" 
            BorderThickness="1"
            CornerRadius="5"
            Padding="15">
        <StackPanel>
            <TextBlock x:Name="UsernameText" 
                       Foreground="White" 
                       FontSize="12"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="PasswordText" 
                       Foreground="White" 
                       FontSize="12"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="SummonerNameText" 
                       Foreground="White" 
                       FontSize="12"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="QueueLockoutText" 
                       Foreground="White" 
                       FontSize="12"
                       Margin="0,0,0,5"/>
            <TextBlock x:Name="LowPriorityText" 
                       Foreground="White" 
                       FontSize="12"/>
        </StackPanel>
    </Border>
</Window>
