<Window x:Class="SmurfAccountManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:SmurfAccountManager.Converters"
        Title="Smurf Account Manager for LoL" 
        Height="600" 
        Width="800"
        WindowStyle="None"
        ResizeMode="CanResize"
        Background="#2C2C2C"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <converters:AccountTagToShapeConverter x:Key="TagToShapeConverter"/>
        <converters:AccountTagToVisibilityConverter x:Key="TagToVisibilityConverter"/>
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="45"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3C3C3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AccountButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3C3C3C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinHeight" Value="60"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Tag.HasQueueLockout, RelativeSource={RelativeSource Self}}" Value="True">
                    <Setter Property="Background" Value="#8B0000"/>
                    <Setter Property="BorderBrush" Value="#FF0000"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4C4C4C"/>
                </Trigger>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Tag.HasQueueLockout, RelativeSource={RelativeSource Self}}" Value="True"/>
                        <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="Background" Value="#A00000"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="#1C1C1C">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" 
                       Text="Smurf Account Manager for LoL" 
                       VerticalAlignment="Center" 
                       Margin="10,0,0,0"
                       Foreground="White"
                       FontSize="12"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="─" Style="{StaticResource TitleBarButtonStyle}" Click="MinimizeButton_Click"/>
                <Button Content="□" Style="{StaticResource TitleBarButtonStyle}" Click="MaximizeButton_Click"/>
                <Button Content="✕" Style="{StaticResource TitleBarButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- Edit Accounts Button -->
        <Button Grid.Row="1" 
                Content="edit accounts" 
                Style="{StaticResource AccountButtonStyle}"
                Margin="10,10,10,5"
                Click="EditAccountsButton_Click"/>

        <!-- Accounts Grid -->
        <ScrollViewer Grid.Row="2" 
                      VerticalScrollBarVisibility="Auto"
                      Margin="10,5,10,10">
            <ItemsControl x:Name="AccountsPanel">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Style="{StaticResource AccountButtonStyle}"
                                Tag="{Binding}"
                                Click="AccountButton_Click"
                                MouseEnter="AccountButton_MouseEnter"
                                MouseLeave="AccountButton_MouseLeave">
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0"
                                          Text="{Binding Username}"
                                          Foreground="White"
                                          TextAlignment="Center"
                                          VerticalAlignment="Center"/>
                                
                                <ContentControl Grid.Column="1"
                                               Content="{Binding Tag, Converter={StaticResource TagToShapeConverter}}"
                                               Visibility="{Binding Tag, Converter={StaticResource TagToVisibilityConverter}}"
                                               VerticalAlignment="Center"
                                               Margin="8,0,0,0"
                                               Width="20"
                                               Height="20"/>
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
